{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "app.js" }
  ],

"crons": [
    {
      "path": "/api/cron/daily-report",
      "schedule": "15 22 * * *"
    },
    {
      "path": "/api/cron/daily-backup", 
      "schedule": "0 23 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}